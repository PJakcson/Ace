<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topRightContainer"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_top">

        <ImageView android:id="@+id/quality"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_settings"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true" />

        <ImageView android:id="@+id/follow"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_unfollow"
            android:scaleType="centerInside"
            android:layout_toStartOf="@id/quality" />

        <ImageView android:id="@+id/share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_share_white"
            android:scaleType="centerInside"
            android:layout_toStartOf="@id/follow" />
    </RelativeLayout>


    <TextView android:id="@+id/viewersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@color/abc_primary_text_material_dark"/>

    <ImageView
        android:id="@+id/viewersIcon"
        android:layout_width="20sp"
        android:layout_height="15sp"
        android:layout_alignTop="@+id/viewersText"
        android:layout_alignBaseline="@+id/viewersText"
        android:baselineAlignBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_active_viewers"
        android:visibility="invisible"/>


    <ImageView android:id="@+id/pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_pause_circle"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bottom">

        <ImageView
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/fullscreen"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fullscreen_white"/>
        </RelativeLayout>

</RelativeLayout>