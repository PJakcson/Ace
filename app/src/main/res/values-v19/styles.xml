<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="colorPrimary">@color/twitch_main</item>
        <item name="colorPrimaryDark">@color/twitch_main</item>
        <item name="android:actionOverflowButtonStyle">@style/test.OverFlow</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="LightThemeSelector" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="colorPrimary">#000000</item>
    </style>

    <style name="test.OverFlow" parent="">
        <item name="android:src">@drawable/ic_more_vert_white</item>
    </style>

</resources>
